<div class="container">

  
  <div class="row-md-6">
    <h2 class="mt-5">Login</h2>

    <form class="form login-form">
      <div class="form-group">
        <label for="email-login">email:</label>
        <input class="form-input form-control w-50" type="text" id="email-login" />
      </div>
      <div class="form-group">
        <label for="password-login">password:</label>
        <input class="form-input form-control w-50" type="password" id="password-login" />
      </div>
      <div class="form-group">
        <button class="btn btn-primary mt-4" type="submit">login</button>
      </div>
    </form>
  </div>


  <div class="row-md-6">
    <h2 class="mt-5">Signup</h2>

    <form class="form signup-form">
      <div class="form-group">
        <label for="name-signup">name:</label>
        <input class="form-input form-control w-50" type="text" id="name-signup" />
      </div>
      <div class="form-group">
        <label for="email-signup">email:</label>
        <input class="form-input form-control w-50" type="text" id="email-signup" />
      </div>
      <div class="form-group">
        <label for="password-signup">password:</label>
        <input class="form-input form-control w-50" type="password" id="password-signup" />
      </div>
      <div class="form-group">
        <button class="btn btn-primary mt-4" type="submit">signup</button>
      </div>
    </form>
  </div>
</div>

<script src="./js/login.js"></script>

<div class="row row-gap-5">
  <div class="row-md-6">
<form class="text-center">
      <h2 class="text-shadow">Login</h2>
  <div class="mb-3 row justify-content-center align-items-center">
    <label for="email-login" class="form-label text-shadow">Email:</label>
    <input type="email" class="form-control w-50" id="email-login" aria-describedby="emailHelp">
  </div>
  <div class="mb-3 row justify-content-center align-items-center">
    <label for="password-login" class="form-label text-shadow">Password</label>
    <input type="password" class="form-control w-50" id="password-login">
  </div>
        <button class="btn btn-outline-success" type="submit">Login</button>
    </form>
  </div>



  <div class="row-md-6">
    <form class="text-center">
          <h2 class="text-shadow">Signup</h2>
      <div class="form-group row justify-content-center align-items-center">
        <label for="name-signup" class="form-label text-shadow">Name:</label>
        <input class="form-control w-50" type="text" id="name-signup" />
      </div>
      <div class="form-group row justify-content-center align-items-center">
        <label for="email-signup" class="form-label text-shadow">Email:</label>
        <input class="form-control w-50" type="text" id="email-signup" />
      </div>
      <div class="form-group row justify-content-center align-items-center">
        <label for="password-signup" class="form-label text-shadow">Password:</label>
        <input class="form-control w-50" type="password" id="password-signup" aria-describedby="passwordHelpBlock"/>
           <div id="passwordHelpBlock" class="form-text text-shadow mb-2 text-success">
        Your password must be 8-20 characters long.
      </div>
      </div>
        <button class="btn btn-outline-success" type="submit">Sign up</button>
    </form>
  </div>
</div>
 

<script src="./js/login.js"></script>

<div class="container text-shadow mt-3">
  <div class="col-auto text-center">
    <h2>Welcome, {{name}}!</h2>
  </div>
</div>

{{#if characters.length}}
<div class="character-list text-center mt-5 text-shadow">
    <h3>Select a character:</h3>
  <div class="dispCharacterInfo bg-dark mx-5 rounded d-flex flex-wrap align-items-centered justify-content-center" style="--bs-bg-opacity: .5;">
    {{!-- Add code to display character information --}}
    {{#each characters}}
    <container class="col-2 bg-dark rounded m-3 w-25">
      <div class="row m-3 justify-content-center">
        <img src="{{this.portrait}}" alt="character image" class="img-thumbnail" style="height: 200px; width: 200px; object-fit: cover;">
        <a class="text-info fs-3" href="/characters/{{this.id}}">{{this.name}}</a>
        <p>The {{this.race}} {{this.class}}</p>
        <div class="del-Btn">
          <button class="btn btn-sm btn-danger mb-3" data-id="{{this.id}}">DELETE</button>
        </div>
      </div>
    </container>
      {{/each}}
  </div>
  {{/if}}
</div>

<script src="./js/profile.js"></script>